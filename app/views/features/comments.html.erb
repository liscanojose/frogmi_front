<div class="container">
	<h1 style="text-align: center"><%=@feature[:feature_public_id]%> </h1>
	<table class="table">
		<thead class="thead-dark">
			<tr>
				<th style="text-align: center" scope="col">Mensajes</th>
			</tr>
		</thead>
		<tbody>
		<% @feature[:comments].each do |feature| %>
			<tr>
				<td style="text-align: center"><%= feature[:message]%></td>
			</tr>
		<% end %>
		</tbody>
	</table>
	<%= button_to 'Volver', features_path, method: :get,class: 'btn btn-secondary' %>
</div>
